{
	"compilerOptions": {
		"lib": ["es2021"],
		"experimentalDecorators": true,
		"target": "es2021",
		"module": "commonjs",
		"moduleResolution": "node",
		"declaration": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"strict": true,
		"checkJs": true,
		"allowSyntheticDefaultImports": true,
		"strictNullChecks": false,
		"types": ["jest", "node"],
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "**/__tests__/*"]
}
